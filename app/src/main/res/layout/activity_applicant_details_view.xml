<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".JobApplicationDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Applicant Name -->
        <TextView
            android:id="@+id/applicantNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Applicant Email -->
        <TextView
            android:id="@+id/applicantEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant Email"
            android:layout_marginBottom="8dp" />

        <!-- Applicant Phone -->
        <TextView
            android:id="@+id/applicantPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant Phone"
            android:layout_marginBottom="8dp" />

        <!-- Applicant Job ID -->
        <TextView
            android:id="@+id/applicantJobIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job ID"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/shortlistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shortlist"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/rejectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Rejected TextView -->
        <TextView
            android:id="@+id/rejectedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rejected"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Input Layout for Shortlisting -->
        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/salaryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salary"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/startDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
